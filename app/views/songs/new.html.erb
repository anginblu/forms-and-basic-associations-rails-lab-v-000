<h1>Create a Song</h1>

<%= form_for @song  do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br>

  <%= f.label :genre_id %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: true %>
  <br>

  <%= f.label "Note 1" %>
  <%= f.text_field :notes[1] %>
  <br>
  <%= f.label "Note 2" %>
  <%= f.text_field :notes[2] %>
  <br>

  <%= f.submit %>
<% end %>
