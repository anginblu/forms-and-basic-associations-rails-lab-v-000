<h1>Create a Song</h1>

<%= form_for @song  do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br>

  <%= f.label :genre_id %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: true %>
  <br>

  <p>
    <%= f.fields_for :notes do |s| %>
      <%= s.input :1, label: "content1" %>
      <%= s.input :2, label: "content1" %>
    <% end %>
  </p>

  <br>

  <%= f.submit %>
<% end %>
